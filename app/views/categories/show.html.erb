
<div class="category_page">
    <% @category.articles.most_recent.each do |article| %>
        <div class="category_article_container"  >
            <div class="article_background" style="background-image: url(<%= asset_path @category.articles.most_recent.first.image  %>)"> 
            </div>        
            <div class="article_discription">
                <p class="name_category">
                    <%= @category.name %> 
                </p>
                <p class="category_article_title">
                 <%= link_to article.title,  article_path(article) %></p>
                
                <p><%= article.body %></p>

                <p class="category_article_vote"><%= vote_or_unvote_btn(article) %></p>
                
            </div>
        </div>
    <% end %>
 </div>

