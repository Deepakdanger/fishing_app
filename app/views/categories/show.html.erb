<h1 class="mt-3 pt-4"> Categoryshow </h1>

<div class="category_page">
    <%= category.name %>
    <% category.articles.each do |article| %>
        <div class="category_article_container" style="background-image: url(<%= asset_path category.articles.most_recent.first.image  %>)" >
            <div class="article_background"> 
            </div>
            <p class="category_name"><%= category.name %> </p>
       
            <div class="category_recent_title">
                <%=  category.articles.most_recent.first.title%>
            </div>
        </div>
    <% end %>
 </div>

<h3>Hi,</h3>
<h3><%= current_user.name  %></h3><br>


<ul>
  <% @category.each do |category| %>
    <li>
      <a href="<%= category_path(category) %>">
       <%= category.name %>
      <% category.articles.each do |article| %>
    
      <a href="<%= article_path(article) %>">
        <%= article.title %>
      </a>
    
  <% end %>
    </li>
  <% end %>
</ul>