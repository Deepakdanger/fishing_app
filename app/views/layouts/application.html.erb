<!DOCTYPE html>
<html>
  <head>
    <title>FishingApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <style> @import url('https://fonts.googleapis.com/css2?family=Festive&display=swap');</style>
   <script
      src="https://kit.fontawesome.com/9875f697fa.js"
      crossorigin="anonymous"
    ></script>
 </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="dropdown d-lg-none">
    <button type="button" class="btn " data-toggle="dropdown">
      <i class="fas fa-hamburger fa-lg"></i>
    </button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href= / >HOME</a>
      <% if current_user %>
      <li class="dropdown-divider"></li>
      <p><%= link_to " CREATE ARTICLE", new_article_path %></p>
      <%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete %>      
       <% else %>
        <%= link_to 'LOGIN', user_session_path %>     |
        <%= link_to 'SIGN UP', user_session_path %>
      <% end %>
    </div>
  </div>

    <a class="navbar-brand" href=/ >Fi-SHOP</a>
    
    <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item ">
          <a class="nav-link " href=/ >HOME</a>
        </li>
         
        <% if current_user %>
        <li class="nav-item">
         <p class="nav-link "> <%= link_to " CREATE ARTICLE", new_article_path%></p>
        </li> 
        <% end %>    
      </ul>      
    </div>
    <div class="btn d-flex">
    <% if current_user %>
      <div class="ml-2 mr-2">
      HELLO,
      <p><%= current_user.name %></p>
      </div>
      <div class="btn d-flex signing">
        <%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete, :class => 'login_nav' %>    

      <% else %>
        <%= link_to 'LOGIN', user_session_path , :class => 'login_nav' %>     |
        <%= link_to "Sign up", new_registration_path(resource_name) , :class => 'login_nav' %>
      <% end %>
      </div>
    </div>
  </nav>
  
      <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <div class="random"></div>
    
    <div class="footer col-14 d-flex footer1">
      <a class="navbar-brand col-3" href="#">Fi-SHOP</a>
      <div class="d-flex col-5">    
          <p class=" color1"> Privacy Policy </p>
          <p class="ml-2 color1">Term & Condition</p>
          <p class="ml-2  d-none d-lg-flex"> Copyright.All Right Reserved</p>
        
      </div>
      <div class="d-flex tect-align-center">
        Connect with Us:<i class="fab fa-facebook fa-lg icon1"></i><i class="icon1 fab fa-twitter-square fa-lg"></i><i class=" icon1 fab fa-instagram-square fa-lg"></i>
      </div>



    </div>

  </body>
</html>
