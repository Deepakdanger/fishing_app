<div class="most_popular" style="background-image: url(<%= asset_path Vote.popular.first.article.image  %>)" >
  <div class="most_popular_title">
      
      <%= link_to Vote.popular.first.article.title, article_path(Vote.popular.first.article) %>
  </div>
  <p class="most_popular_body"><%= Vote.popular.first.article.body %></p>

</div>

  <div class="grid_container">
  <% @category.each do |category| %>

    <div class="category_container" style="background-image: url(<%= asset_path category.articles.most_recent.first.image  %>)" >
       <p class="category_name"><%= link_to category.name,  category_path(category) %> </p>
       
       <div class="category_recent_title">
       <%= link_to category.articles.most_recent.first.title,  article_path(category.articles.most_recent.first) %>
       </div>
    </div>

 <% end %>
 </div>



